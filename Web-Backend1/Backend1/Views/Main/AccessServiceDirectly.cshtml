@using Backend1.Services
@model dynamic
@inject IOperatorsService OperatorsService
@inject IRandomNumberService RandomNumbersService
@{
    ViewBag.Title = "Access service directly";
}

<h2>Current Date & Time</h2>
<dl class="dl-horizontal">
    <dd>Первое число :@RandomNumbersService.first</dd>
    <dd>Второе число :@RandomNumbersService.second</dd>
    <dd>Сумма :@OperatorsService.Sum(@RandomNumbersService.first, @RandomNumbersService.second)</dd>
    <dd>Вычитание :@OperatorsService.Subtract(@RandomNumbersService.first, @RandomNumbersService.second)</dd>
    <dd>Умножение :@OperatorsService.Multiply(@RandomNumbersService.first, @RandomNumbersService.second)</dd>
    <dd>Деление :@OperatorsService.Divide(@RandomNumbersService.first, @RandomNumbersService.second)</dd>



</dl>
