@model IEnumerable<Backend5.Models.Analysis>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" asp-route-patientId="@ViewBag.Patient.Id" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Lab)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lab.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  patientId=item.PatientId, analysisId=item.AnalysisId}) |
                @Html.ActionLink("Details", "Details", new { patientId = item.PatientId, analysisId = item.AnalysisId }) |
                @Html.ActionLink("Delete", "Delete", new { patientId = item.PatientId, analysisId = item.AnalysisId })
            </td>
        </tr>
}
    </tbody>
</table>
