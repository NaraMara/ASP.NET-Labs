@model IEnumerable<Backend5.Models.HospitalPhone>

@{
    ViewData["Title"] = "Index";
}

<h2>Phones of @ViewBag.Hospital.Name</h2>

<p>
    <a asp-action="Create" asp-route-hospitalId="@ViewBag.Hospital.Id">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospital)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hospital.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-hospitalId="@item.HospitalId" asp-route-phoneId="@item.PhoneId">Edit</a> |
                <a asp-action="Details" asp-route-hospitalId="@item.HospitalId" asp-route-phoneId="@item.PhoneId">Details</a> |
                <a asp-action="Delete" asp-route-hospitalId="@item.HospitalId" asp-route-phoneId="@item.PhoneId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
