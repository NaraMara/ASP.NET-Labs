@using Backend4.Models.Controls
@model Backend4.Models.SignUp.SignUpSecondPageViewModel
@{
    ViewBag.Title = "Sign up";
    var allMonths = ViewBag.AllMonths as Month[];
    var montsMap = allMonths.ToDictionary(x => x.Id);
}

<h2>Sign up result</h2>
<dl class="dl-horizontal">
    <dt>First name</dt>
    <dd>@Model.FirstName</dd>
    <dt>Last name</dt>
    <dd>@Model.LastName</dd>
    <dt>Birthday</dt>
    <dd>@montsMap[Model.Month.Id].Name @Model.Day, @Model.Year</dd>
    <dt>Email</dt>
    <dd>@Model.Email</dd>
    <dt>Password</dt>
    <dd>@Model.Password</dd>
    <dt>User existed</dt>
    <dd>@Model.IsEverExisted</dd>
    <dt>Remembered</dt>
    <dd>@Model.IsSelected</dd>
</dl>
